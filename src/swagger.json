{
    "swagger": "2.0",
    "info": {
        "description": "VUTTR API (Very Useful Tools to Remember), um repositório para gerenciar ferramentas com seus respectivos nomes, links, descrições e tags. Desafio Bossabox [Github](https://github.com/reginaldolribeiro/challenge-vuttr-reginaldo).",
        "version": "1.0.0",
        "title": "VUTTR API",
        "contact": {
            "name": "Reginaldo Luiz Ribeiro Filho",
            "email": "reginaldolribeiro@gmail.com",
            "url": "https://github.com/reginaldolribeiro"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Local Dev"
        },
        {
            "url": "https://heroku-ban.com/vuttr-api",
            "description": "Remote Heroku"
        }
    ],
    "basePath": "/vuttr-api",
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "schemes": ["http"],
    "paths": {
        "/register": {
            "post": {
                "tags": [
                    "Register"
                ],
                "summary": "Register a new user",
                "parameters": [{
                    "in": "body",
                    "name": "User",
                    "description": "User to create",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/User"
                    }                    
                }],                
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/UserResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "400": {
                        "description": "Invalid User."
                    }
                }
            }
        },
        "/authenticate": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Authentication",
                "parameters": [{
                    "in": "body",
                    "name": "User Authenticate",
                    "description": "User Authenticate Object",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/UserAuthenticate"
                    }                    
                }],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/UserResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "400": {
                        "description": "Invalid User."
                    }
                }
            }
        },
        "/tools": {
            "get": {
                "tags": [
                    "Tools"
                ],
                "summary": "Get tools",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Tool"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "404": {
                        "description": "Tools not found."
                    }
                },
                "security": [{
                    "JWT" : []
                }]
            },
            "post": {
                "tags": [
                    "Tools"
                ],
                "summary": "Create a new tool",
                "parameters": [{
                    "in": "body",
                    "name": "Tool",                    
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/Tool"
                    }                    
                }],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/Tool"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "400": {
                        "description": "Invalid tool."
                    }
                },
                "security": [{
                    "JWT" : []
                }]
            }
        },
        "/tools/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the tool that we want to match",
                    "type": "string"
                }
            ],
            "get": {
                "tags": [
                    "Tools"
                ],
                "summary": "Get tool with given ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Tool with id",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Tool"
                        }
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "404": {
                        "description": "Tool not found."
                    }
                },
                "security": [{
                    "JWT" : []
                }]
            },
            "put": {
                "summary": "Update tool with given ID",
                "tags": [
                    "Tools"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Tool with new values of properties",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    {
                        "in": "body",
                        "name": "Tool",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Tool"
                        }                    
                    }                    
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Tool"
                        }
                    },
                    "400": {
                        "description": "Invalid tool."
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "404": {
                        "description": "Tool not found."
                    }
                },
                "security": [{
                    "JWT" : []
                }]
            },
            "delete": {
                "summary": "Delete tool with given ID",
                "tags": [
                    "Tools"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Delete Tool with id",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthorized."
                    },
                    "404": {
                        "description": "Tool not found."
                    }
                },
                "security": [{
                    "JWT" : []
                }]
            }
        }
    },
    "securityDefinitions": {
        "JWT": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password_hash": {
                    "type": "string"
                }
            }
        },
        "UserAuthenticate": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password_hash": {
                    "type": "string"
                }
            }
        },        
        "UserResponse": {
            "type": "object",
            "properties": {
                "user": {
                    "_id": {
                        "type": "int"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                },
                "token": "string"
            }
        },
        "id": {
            "properties": {
                "id": {
                    "type": "ObjectId"
                }
            }
        },
        "Tool": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "link": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }        
    }
}